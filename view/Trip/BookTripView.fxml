<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Trip.BookTripController">

    <ImageView fitWidth="600" fitHeight="200" preserveRatio="true">
        <image>
            <Image url="/image/trip.png"/>
        </image>
    </ImageView>

    <Separator/>

    <Label fx:id="userIn" text="Welcome to the Trip section" styleClass="heading"/>

    <Separator/>

    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Button text="Add Destination" styleClass="button" prefWidth="200.0" />
        <Button text="Remove" styleClass="button" prefWidth="200.0" />
        <Button text="Add Connecting Flights" styleClass="button" prefWidth="200.0" />
        <Button text="View Trip" styleClass="button" prefWidth="200.0" />
        <Button text="Exit" styleClass="button" prefWidth="200.0" onAction="#closeButton" />
    </HBox>

    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>


</VBox>